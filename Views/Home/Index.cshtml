@{
    ViewData["Title"] = "The Best Music Store";
}

<style>
    /* Define a background image and color */
    body {
        background-color: blanchedalmond; /* Fallback color if the image fails to load */
        background-size: cover;
        background-repeat: no-repeat;
    }

    .custom-select {
        background-color: white; /* Semi-transparent white background for the select */
    }

    /* Define styles for text and elements within the container */
    .container {
        color: black; /* Text color */
    }

    .lead {
        font-size: 1.25rem; /* Larger font size for the lead paragraph */
    }
</style>

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-md-6">
            <h1 class="text-center">Welcome to The Best Music Store</h1>
            <p class="text-center lead">Explore a wide range of musical genres and performers</p>

            <div class="text-center mt-4">
                <select class="custom-select" id="genreSelect">
                    <option selected disabled>Select a genre...</option>
                    <option value="rock">Rock</option>
                    <option value="pop">Pop</option>
                    <option value="80s">80s</option>
                    <option value="country">Country</option>
                </select>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#genreSelect').change(function () {
                var selectedGenre = $(this).val();
                if (selectedGenre) {
                    window.location.href = '/Music/Artists?genre=' + selectedGenre;
                }
            });
        });
    </script>
}